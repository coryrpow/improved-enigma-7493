<h1><%= @dish.name %></h1>

<p>Description: <%= @dish.description %></p>

<h2>Ingredients:</h2>
  <% @dish.ingredients.each do |ingredient| %>
<section id="dish_ingredient-<%= ingredient.id %>">
    <li><%= ingredient.name %>
    <%= button_to "Delete #{ingredient.name}", "/dishes/#{@dish.id}/ingredients/delete", params: {ingredient_id: ingredient.id}, method: :delete %>
    </li>
  <% end %>
</section>

<p>Total Calorie Count: <%= @dish.calorie_count %></p>
<p>Created by Chef: <%= @dish.chef.name %></p>

<p>Add an Existing Ingredient:</p>
  <%= form_with url: "/dishes/#{@dish.id}/ingredients", method: :post,local: true, data: {turbo: false} do |f| %>
    <%= f.label :ingredient_id%>
    <%= f.text_field :ingredient_id%>
    <%= f.submit "Add Ingredient" %>
  <% end %>